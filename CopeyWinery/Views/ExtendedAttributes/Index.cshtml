@model IEnumerable<CopeyWinery.Models.ExtendedAttribute>

@{
    ViewBag.Title = "Index";
}

<h2>Administracion de Atributos</h2>

<p>
    @Html.ActionLink("Agregar ", "Create")
</p>
@Html.ValidationSummary(true, "", new { @class = "text-success" })

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_ExtAttr }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.Id_ExtAttr }) |*@
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_ExtAttr })
            </td>
        </tr>
    }

</table>
