@model IEnumerable<CopeyWinery.Models.Labor>

@{

    ViewBag.Title = "Index";
}
<h2>Administración de Labores</h2>

<link rel="stylesheet" href="\fonts\tableStyle.css">

<p>
    @Html.ActionLink("Agregar", "Create")
</p>
<div style="overflow-x:auto;">

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id_labor }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id_labor }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id_labor })
                </td>
            </tr>
        }

    </table>
</div>
