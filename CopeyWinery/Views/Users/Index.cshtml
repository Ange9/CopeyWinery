@model IEnumerable<CopeyWinery.Models.User>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="\fonts\tableStyle.css">

<h2>Administracion de Usuarios</h2>

<p>
    @Html.ActionLink("Agregar", "Create")
</p>
@Html.ValidationSummary(true, "", new { @class = "text-success" })

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nombre")
        </th>
        <th>
            @Html.DisplayName("Nombre de usuario")
        </th>
        <th>
            @Html.DisplayName("Rol")
        </th>
        @*<th>
                @Html.DisplayName("contrasena")
            </th>*@
        @*<th>
                @Html.DisplayNameFor(model => model.Email)
            </th>*@
        <th>
            @Html.DisplayName("Fecha de creacion")
        </th>
        @*<th>
                @Html.DisplayName("Ultima conexion")
            </th>*@

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.RoleName)
            </td>

            @*<td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.LastLoginDate)
                </td>*@

            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.UserId }) |
                @*@Html.ActionLink("Detalles", "Details", new { id = item.UserId }) |*@
                @Html.ActionLink("Eliminar", "Delete", new { id = item.UserId })
            </td>
        </tr>
    }

</table>
